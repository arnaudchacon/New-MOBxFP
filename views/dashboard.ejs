<!DOCTYPE html>
<html>
<head>
    <title>MOBILIS Dashboard</title>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;700&display=swap" rel="stylesheet">
    <style>
        /* Body Styles */
        body {
            font-family: Montserrat, sans-serif;
            background-image: linear-gradient(45deg, transparent 20%, #24368c 25%, transparent 25%),
                              linear-gradient(-45deg, transparent 20%, #24368c 25%, transparent 25%),
                              linear-gradient(-45deg, transparent 75%, #24368c 80%, transparent 0),
                              radial-gradient(#24368c 2px, transparent 0);
            background-size: 30px 30px, 30px 30px;
            margin: 0;
            padding: 0;
            color: #24368c;
        }

        /* Form Styles */
        form {
            background-color: #fff;
            padding: 40px 60px;
            border-radius: 8px;
            box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.1);
            max-width: 500px;
            margin: 80px auto;
        }

        label {
            display: block;
            margin-bottom: 8px;
            font-weight: bold;
        }

        input[type="text"], textarea {
            width: 100%;
            padding: 12px;
            margin-bottom: 20px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        button {
            background-color: #333;
            color: white;
            border: none;
            padding: 15px 30px;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.2s ease;
        }

        button:hover {
            background-color: #555;
        }

        h1 {
            text-align: center;
            margin-bottom: 50px;
            font-size: 2em;
            background: rgba(255,255,255,0.7);
            padding: 10px;
            border-radius: 8px;
            box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.1);
        }

        .bubble {
            background-color: rgba(255,255,255,0.7);
            padding: 15px;
            border-radius: 50%;
            position: absolute;
            max-width: 200px;
            font-size: 0.9em;
            box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.1);
        }

        .bubble.step1 {
            top: 10%;
            left: 5%;
        }

        .bubble.step2 {
            top: 10%;
            right: 5%;
        }

        .bubble.step3 {
            bottom: 10%;
            left: 5%;
        }

    </style>
</head>
<body>
    <h1>UTILISEZ NOTRE INTELLIGENCE ARTIFICIELLE</h1>

    <!-- Bubbles explaining the steps -->
    <div class="bubble step1">Step 1: Enter your project name and description.</div>
    <div class="bubble step2">Step 2: Click on 'Submit'.</div>
    <div class="bubble step3">Step 3: Get ready to use our AI!</div>
    
    <!-- Centered Form -->
    <form id="projectForm">
        <label for="projectName">Project Name:</label>
        <input type="text" id="projectName" name="name" required>

        <label for="projectDescription">Description:</label>
        <textarea id="projectDescription" name="description" rows="4" required></textarea>

        <button type="submit">Submit</button>
    </form>

    <script>
        document.getElementById("projectForm").addEventListener("submit", function(event) {
            console.log("Form submitted!");
            event.preventDefault();  // Prevent default form submission

            // Collect form data
            const formData = {
                name: document.getElementById("projectName").value,
                description: document.getElementById("projectDescription").value
            };

            fetch('/create-floorplanner-project', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(formData)
            })
            .then(response => {
                if (!response.ok) {
                    // This will capture server errors and response is not a valid JSON
                    return response.text().then(text => {
                        throw new Error(text);
                    });
                }
                return response.json();
            })
            .then(data => {
                if (data.editorUrl) {
                    // Redirect the user to the Floorplanner editor with the provided URL
                    window.location.href = data.editorUrl;
                } else if (data.message) {
                    alert('Error starting new project: ' + data.message);
                }
            })
            .catch(error => {
                // This will now capture any error messages, be it from the server or any other issue
                alert('Error starting new project: ' + error.message);
            });            
        });
    </script>
</body>
</html>
